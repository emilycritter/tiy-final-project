<h1>Artists</h1>
<div class="container">
  <% @artists.each do |artist| %>
    <%= link_to artist.shop_name, artist_path(name_parameterize: artist.name_parameterize) %>
    <ul>
      <% artist.pieces.each do |piece| %>
        <li><%= link_to piece.title, piece_path(id: piece.id) %></li>
      <% end %>
    </ul>
  <% end %>
</div>

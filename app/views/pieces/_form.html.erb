<%= simple_form_for @piece do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :inventory %>
  <%= f.label "Categories" %><br>
  <%= f.collection_select(:category_ids, Category.all.order("name asc"),
    :id, :name, {:selected => @piece.category_ids, :include_blank => true},
    {multiple: true, class:"dropdown dropdown-toggle"}) %>
  <br><br>
  <%= f.input :photo, as: :file %>

  <%= f.submit class: "btn btn-lg btn-primary" %>
<% end %>

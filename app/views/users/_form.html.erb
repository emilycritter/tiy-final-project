<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone_number, :label => "Phone (no dashes or spaces needed)" %>
  <%= f.input :location, :label => "Set Default Location (e.g. 1600 Pennsylvania Avenue, Washington, DC 20500)" %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit class: "btn btn-lg btn-primary" %>
<% end %>
